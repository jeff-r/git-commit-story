#!/usr/bin/env ruby

require "optparse"
require "git-commit-story"

class GitCommitStoryRunner
  def initialize(args)
    parse_args(args)
  end

  def parse_args(args)
    parser = OptionParser.new do |opts|
      opts.banner = "Usage: git commit-story --message 'message' --story 'story'"
      opts.on("-m", "--message MESSAGE", "Pass the message") do |message|
        puts "message: #{message}"
        @message = message
      end
      opts.on("-s", "--story STORY", "Story ID -- AgileZen id, Pivotal id, or label") do |story_id|
        @story = story_id
      end
    end

    parser.parse!
  end

  def run
    gcs = GitCommitStory.new(:commit_message => @message, :story_id => @story)
    gcs.commit
  end
end

GitCommitStoryRunner.new(ARGV).run
